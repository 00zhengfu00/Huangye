<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>
    <!-- actionbar 样式 -->
    <style name="CustomActionBar" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
    </style>

    <!-- actionbar 标题样式 -->
    <style name="ActionBarTitle" parent="@android:style/TextAppearance.Holo.Large">

    </style>

    <!-- actionbar 菜单文字样式 -->
    <style name="ActionBarMenu" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>
    <style name="MenuTextStyle">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="custom_ratingbar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_progress</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:maxHeight">50dip</item>
        <item name="android:stepSize">1.0</item>
    </style>

    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="title_text_size">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="des_text">
        <item name="android:textColor">@color/viewfinder_mask</item>
        <item name="android:textSize">10dp</item>
    </style>
    <style name="category_des_text">
        <item name="android:textColor">@color/home_custom_text_color</item>
        <item name="android:textSize">@dimen/home_layout_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="remen_image">
        <item name="android:layout_marginRight">10dp
        </item>
    </style>

    <style name="ReportButton">
        <item name="android:textSize">@dimen/main_frame_item_secondtextsize</item>
        <item name="android:textColor">@color/ghostwhite</item>
        <item name="android:background">@drawable/btn_orange_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="ReportEdit">
        <item name="android:textSize">@dimen/main_frame_item_thirdtextsize</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">@dimen/feed_back_edittext_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">@dimen/menu_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/menu_marginRight</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLength">2000</item>
    </style>
    <style name="ReportEdit1">
        <item name="android:textSize">@dimen/main_frame_item_thirdtextsize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/cityhot_edittext_bg</item>
        <item name="android:padding">@dimen/feed_back_edittext_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/feed_back_number_edit_height</item>
        <item name="android:layout_marginLeft">@dimen/menu_marginLeft</item>
        <item name="android:layout_marginTop">@dimen/feed_back_contact_edit_margin_top</item>
        <item name="android:layout_marginRight">@dimen/menu_marginRight</item>
        <item name="android:hint">@string/feedback_hint2</item>
        <item name="android:maxLength">30</item>
    </style>
    <style name="ReportRadio">
        <item name="android:textSize">@dimen/main_frame_item_normaltextsize</item>
        <item name="android:textColor">@color/dimgray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/radiobutton</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="ReportText">
        <item name="android:textSize">@dimen/main_frame_item_normaltextsize</item>
        <item name="android:textColor">@color/prompt_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/menu_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/menu_marginRight</item>
    </style>


    <!--   工具界面样式 -->
    <style name="subscribe_my_tip_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/subscribe_tip_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="subscribe_seperate_line">
        <item name="android:background">@color/subscribe_seperate_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:layout_marginTop">14.0dip</item>
        <item name="android:layout_marginBottom">14.0dip</item>
    </style>

    <style name="subscribe_flow_layout">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="subscribe_more_tip_text" parent="@style/subscribe_my_tip_text">
        <item name="android:textSize">13.0sp</item>
    </style>

    <!-- 提示弹出框-->
    <style name="MenuDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="MenuDialogAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无边框 -->
        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置为浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置动画 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="qZonePublishProgressStyle">
        <item name="android:maxWidth">30.0dip</item>
        <item name="android:maxHeight">30.0dip</item>
        <item name="android:minWidth">30.0dip</item>
        <item name="android:minHeight">30.0dip</item>
    </style>

    <!-- 二级分类样式 -->
    <style name="shenghuo_type_two">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">0.2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/my_tab_background</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 默认 文本样式 -->
    <style name="defaultText">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="dial_keyboard_button">
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingTop">2.0px</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">35dip</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>
    <style name="dial_callbutton_double">
        <item name="android:textSize">16.0sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center</item>
        <item name="android:background">@null</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawableLeft">@drawable/s_icon_dial_voice_tube_small</item>
        <item name="android:drawablePadding">3.0dip</item>
    </style>


    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!-- 输入框 样式 -->
    <style name="input">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="footer_img">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:cropToPadding">true</item>
    </style>

    <style name="footer_img_button" parent="@style/footer_img">
        <item name="android:background">@drawable/footer_light_grey_bg_selector</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="Transparent">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@anim/push_bottom_in</item>
    </style>
    <style name="scroll_footer">
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdgeLength">1.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
</resources>