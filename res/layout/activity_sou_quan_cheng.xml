<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/titlerelativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_background"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/Souquancheng_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/Souquancheng_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="教育培训"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Souquancheng_moresearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="高级搜索"
            android:textColor="@color/my_title_textcolor" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="6dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_address_big" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教育培训"
                    android:textColor="#666666"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:paddingBottom="0.1dp" >

                <TextView
                    android:id="@+id/Souquancheng_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0.2dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_tab_background"
                    android:gravity="center"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:layout_margin="5dp"
                    android:singleLine="true"
                    android:text="中央大街" />

                <TextView
                    android:id="@+id/Souquancheng_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0.2dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_tab_background"
                    android:gravity="center"
                    android:paddingBottom="11dp"
                    android:layout_margin="5dp"
                    android:paddingTop="11dp"
                    android:singleLine="true"
                    android:text="开发区" />

                <TextView
                    android:id="@+id/Souquancheng_text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0.2dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_tab_background"
                    android:gravity="center"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:layout_margin="5dp"
                    android:singleLine="true"
                    android:text="秋林" />

                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:paddingBottom="0.1dp" >

              

                <TextView
                    android:id="@+id/Souquancheng_text6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0.2dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_tab_background"
                    android:gravity="center"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:singleLine="true"
                    android:layout_margin="5dp"
                    android:text="爱建社区" />

                <TextView
                    android:id="@+id/Souquancheng_text7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0.2dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_tab_background"
                    android:gravity="center"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:layout_margin="5dp"
                    android:singleLine="true"
                    android:text="卢家街/..." />

                <TextView
                    android:id="@+id/Souquancheng_text8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/my_tab_background"
                    android:gravity="center"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:layout_margin="5dp"
                    android:singleLine="true"
                    android:text="新阳路" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:paddingBottom="0.1dp" >

                <TextView
                    android:id="@+id/Souquancheng_text9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0.2dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_tab_background"
                    android:gravity="center"
                    android:paddingBottom="11dp"
                    android:paddingTop="11dp"
                    android:layout_margin="5dp"
                    android:singleLine="true"
                    android:text="军工院" />

                <TextView
                    android:id="@+id/Souquancheng_text10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0.2dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_tab_background"
                    android:gravity="center"
                    android:paddingBottom="11dp"
                    android:layout_margin="5dp"
                    android:paddingTop="11dp"
                    android:singleLine="true"
                    android:text="阿城区" />

                <TextView
                    android:id="@+id/Souquancheng_text11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0.2dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_tab_background"
                    android:gravity="center"
                    android:paddingBottom="11dp"
                    android:layout_margin="5dp"
                    android:paddingTop="11dp"
                    android:singleLine="true"
                    android:text="更多商区" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>