<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
            android:id="@+id/top_colllogs_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_raw"
            android:orientation="vertical" >

        <TextView
                android:id="@+id/wenti_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="通话记录"
                android:textColor="@color/white"
                android:textSize="20.0sp" />

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_colllogs_layout"
            android:orientation="vertical">
        <ListView
                android:id="@+id/calllogs_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fadingEdge="none"
                android:dividerHeight="1dp"
                android:divider="@color/lightgray"
                />

        <TextView
                android:id="@+id/nocalllogs_notice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="28dip"
                android:text="暂无通话记录"
                android:visibility="gone"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/callPanel"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true"
        android:background="@color/white"
    	android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/DialNumEdit" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="请输入号码或者拼音搜索"
            android:textColor="@color/grey"
            android:singleLine="true"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="60dp"
            android:background="@drawable/dial_input_back"
            />
        <ImageButton
            android:id="@+id/BtnBackSpace" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backspace_selector"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"
            />
    </RelativeLayout>
        
    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageButton
            android:id="@+id/Btn1" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dial_num_1"
            android:background="@drawable/dialbutton_selector"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/Btn2" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dial_num_2"
            android:background="@drawable/dialbutton_selector"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/Btn3" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dial_num_3"
            android:background="@drawable/dialbutton_selector"
            android:layout_weight="1"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/Btn4" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dial_num_4"
            android:background="@drawable/dialbutton_selector"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/Btn5" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dial_num_5"
            android:background="@drawable/dialbutton_selector"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/Btn6" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dial_num_6"
            android:background="@drawable/dialbutton_selector"
            android:layout_weight="1"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         <ImageButton
            android:id="@+id/Btn7" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dial_num_7"
            android:background="@drawable/dialbutton_selector"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/Btn8" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dial_num_8"
            android:background="@drawable/dialbutton_selector"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/Btn9" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
           android:src="@drawable/dial_num_9"
            android:background="@drawable/dialbutton_selector"
            android:layout_weight="1"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         <ImageButton
            android:id="@+id/BtnXing" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dial_num_star"
            android:background="@drawable/dialbutton_selector"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/Btn0" 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dial_num_0"
            android:background="@drawable/dialbutton_selector"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/BtnJing" 
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dial_num_pound"
            android:background="@drawable/dialbutton_selector"
            android:layout_weight="1"
            />
    </LinearLayout>
    
        <RelativeLayout 
                android:id="@+id/dial_layout"
                android:layout_margin="5dp"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/bg_q_send"
			    android:clickable="true"
                android:focusable="true" 
                android:gravity="center"
			    >
			<ImageView 
			    android:id="@+id/dial_IV"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:src="@drawable/icon_tabbar_phone_btn"
			    /> 
			<TextView 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:textColor="#FFFFFF" 
			    android:text="呼叫"
			    android:textSize="20dp"
			    android:layout_marginLeft="10dp"
			    android:layout_toRightOf="@+id/dial_IV"
			    /> 
			</RelativeLayout>	
    </LinearLayout>
</RelativeLayout>